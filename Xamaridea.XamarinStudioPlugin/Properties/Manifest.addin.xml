<?xml version="1.0" encoding="UTF-8"?>
<ExtensionModel>
    <Extension path = "/MonoDevelop/Ide/Commands/Edit">
        <Command id = "Xamaridea.XSCommands.OpenInAndroidStudio"
             _label = "Open In Android Studio"
			_description = "Converts the project and open it in Android Studio"
             defaultHandler = "Xamaridea.OpenInAndroidStudioHandler" />
    </Extension>

    <Extension path = "/MonoDevelop/Ide/ContextMenu/ProjectPad">
		<Condition id="ItemType" value="Project">
	        <CommandItem id="Xamaridea.XSCommands.OpenInAndroidStudio" />
		</Condition>
    </Extension>

